@model Dictionary<int, VirtualDeviceUDPWeb.Models.DeviceModel>

@{ 
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Virtual Devices Monitoring</title>
    <link rel="stylesheet" href="/lib/twitter-bootstrap/css/bootstrap.min.css" />
</head>
<body class="p-1">
    <h3 class="text-center">Products</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Value1</td>
                <td>Value2</td>
                <td>UpLimit</td>
                <td>LowLimit</td>
            </tr>
        </thead>
        <tbody>
            @{ 
                string style = "";
            }
            @foreach (var d in Model)
            {
            <tr>
                <td>@d.Key</td>
                @if(d.Value.IsWithinLimits)
                {
                    style = "color:black";
                }
                else
                {
                    style = "color:red;";
                }
                <td style=@style>@d.Value.Value1</td>
               
                <td>@d.Value.Value2</td>
                <td>@d.Value.UpLimit</td>
                <td>@d.Value.LowLimit</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>